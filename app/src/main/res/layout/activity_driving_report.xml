<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background_color_gray"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_29"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDrivingReport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_blue"
            android:gravity="center"
            android:text="行驶报告"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvDailyReport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_blue_hollow_0_5dp"
            android:gravity="center"
            android:text="日报"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvTimeIntervalReport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_blue_hollow_0_5dp"
            android:gravity="center"
            android:text="时间段报告"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <com.tourcoo.carnet.core.widget.custom.EmiViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.tourcoo.carnet.core.widget.custom.EmiViewPager>


</LinearLayout>