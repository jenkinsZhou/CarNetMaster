<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_35"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_35">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@null"
            android:drawableLeft="@mipmap/ic_mobile_phone"
            android:drawablePadding="@dimen/dp_20"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textSize="@dimen/sp_13" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_black_alpha_20" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etVcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/ic_verification_code"
                android:drawablePadding="@dimen/dp_20"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tvSendVerificationCode"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@drawable/selector_bg_radius_16_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_black_alpha_20" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@null"
            android:drawableLeft="@mipmap/ic_password"
            android:drawablePadding="@dimen/dp_20"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_black_alpha_20" />


        <EditText
            android:id="@+id/etPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@null"
            android:drawableLeft="@mipmap/ic_password"
            android:drawablePadding="@dimen/dp_20"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_black_alpha_20" />


        <CheckBox
            style="@style/CustomCheckBoxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:checked="true"
            android:drawablePadding="@dimen/dp_5"
            android:text="我已同意注册条例"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvRegister"
        style="@style/TextViewButtonBlueBgMatchParentStyle"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:text="注册"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击“注册”，表示你同意"
            android:textColor="#ff888888"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/tvLicensing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《车联网软件许可条例》"
            android:textColor="#4287FF"
            android:textSize="@dimen/sp_10" />

    </LinearLayout>


</LinearLayout>
