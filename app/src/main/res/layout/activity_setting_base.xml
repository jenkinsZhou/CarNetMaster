<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F7"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_radius_12_white"
            android:orientation="vertical">

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_20"
                android:textStyle="bold"
                app:sDividerLineType="none"
                app:sLeftTextString="新消息通知"
                android:visibility="gone"
                app:sRightIconRes="@mipmap/ic_more"
                app:sUseRipple="false"></com.allen.library.SuperTextView>

            <com.allen.library.SuperTextView
                android:id="@+id/stvAboutUs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_12"
                android:textStyle="bold"
                app:sDividerLineType="none"
                app:sLeftTextString="关于我们"
                app:sRightIconRes="@mipmap/ic_more"
                app:sUseRipple="false"></com.allen.library.SuperTextView>

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:textStyle="bold"
                android:id="@+id/stvClearCache"
                app:sDividerLineType="none"
                app:sLeftTextString="清除缓存"
                app:sRightIconRes="@mipmap/ic_more"
                app:sUseRipple="false"/>
        </LinearLayout>


        <TextView
            android:id="@+id/btnExitLogin"
            style="@style/TextViewButtonBlueBgMatchParentStyle"
            android:gravity="center"
            android:text="退出登录"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            />


        <!-- <TextView
             android:id="@+id/btnChangeAccount"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="@dimen/dp_12"
             android:paddingBottom="@dimen/dp_12"
             android:gravity="center"
             android:layout_above="@id/btnExitLogin"
             android:layout_marginLeft="@dimen/dp_10"
             android:layout_marginRight="@dimen/dp_10"
             android:layout_marginBottom="@dimen/dp_15"
             android:background="@drawable/selector_bg_radius_16_blue"
             android:text="切换账号"
             android:textColor="@color/white" />-->
    </RelativeLayout>
</LinearLayout>