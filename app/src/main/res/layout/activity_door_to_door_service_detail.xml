<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F7"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--订单状态布局-->
            <TextView
                android:id="@+id/tvOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_15"
                android:text="订单编号:"
                android:textColor="@color/blueCommon"
                android:textSize="@dimen/sp_12" />

            <!--订单状态布局-->
            <TextView
                android:id="@+id/tvOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_5"
                android:text="订单状态：维修中"
                android:textColor="@color/blueCommon"
                android:textSize="@dimen/sp_12" />
            <!--第二部分布局(白色圆角区域)-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/bg_radius_12_white"
                android:orientation="vertical"
                android:padding="@dimen/dp_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_introduction"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="故障简述"
                    android:textColor="#171717"
                    android:textSize="@dimen/sp_15" />

                <!--  故障内容-->
                <TextView
                    android:id="@+id/tvFaultContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:textSize="@dimen/sp_11"
                    android:text="内容描述内容描述内容描述内容描述内容描述内容描述内
容描述内容描述内容描述内容描述内容描述内容描述内容
描述内容描述内容描述内容描述内容描述内容描述内容描
述内容描述内容描述内容描述" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:drawableLeft="@mipmap/ic_introduction"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="附加图片"
                    android:textColor="#171717"
                    android:textSize="@dimen/sp_15" />

               <!-- <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">-->

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="@dimen/dp_10"
                        android:id="@+id/faultImageRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never">

                    </androidx.recyclerview.widget.RecyclerView>
               <!-- </RelativeLayout>-->


                <TextView
                    android:id="@+id/btnLocate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:drawableLeft="@mipmap/ic_position"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="上门地址"
                    android:textColor="#171717"
                    android:textSize="@dimen/sp_15" />

                <!-- "上门地址"-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址:"
                        android:textColor="@color/blueCommon" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="安徽省合肥市蜀山区高速翡翠湖畔" />

                </LinearLayout>
                <!-- 维修厂-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:drawableLeft="@mipmap/ic_introduction"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="维修厂"
                    android:textColor="#171717"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tvRepairFactory"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合肥成铭汽车修理厂（潜山路店）" />


            </LinearLayout>

            <TextView
                style="@style/TextViewButtonBlueBgMatchParentStyle"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:text="附近修理厂"
                android:id="@+id/tvFirstFunction"
                android:textColor="@color/white"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvSecondFunction"
                style="@style/TextViewButtonBlueBgMatchParentStyleBaseHollow"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_30"
                android:text="取消服务"
                android:textColor="@color/blueCommon" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>